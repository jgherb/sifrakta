<Window x:Class="SiFrakta_D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="825.556" Width="1360.356">
    <Grid Background="Black">
        <Button x:Name="SierpinskiButton" Content="Sierpinski 3" HorizontalAlignment="Left" Height="68" Margin="291,26,0,0" VerticalAlignment="Top" Width="200" Background="Green" Foreground="#FF020202" FontSize="30" Click="Button_Click">
        </Button>
        <Viewbox Width="1000" Height="600"
x:Name="ImgContainer" Margin="292,143,74,25" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Image x:Name="Img1" />
        </Viewbox>
        <Button x:Name="MandelbrotButton" Content="Mandelbrot" HorizontalAlignment="Left" Height="68" Margin="501,26,0,0" VerticalAlignment="Top" Width="200" Background="AliceBlue" Foreground="#FF020202" FontSize="30" Click="MandelbrotButton_Click"/>
        <TextBlock HorizontalAlignment="Left" Height="39" Margin="10,719,0,0" TextWrapping="Wrap" Text="Julius Herb" VerticalAlignment="Top" Width="261" FontSize="36" TextAlignment="Center" FontFamily="Adobe Caslon Pro" Foreground="White"/>
        <Grid Margin="10,82,1100,632">
            <Slider x:Name="SliderVT" HorizontalAlignment="Left" Height="40" Margin="0,20,-15,0" VerticalAlignment="Top" Width="257" Maximum="100000" ValueChanged="SliderVT_ValueChanged" LargeChange="100" Foreground="Lime" Value="30000" SmallChange="1" />
            <TextBlock HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="Versuchstiefe" VerticalAlignment="Top" Width="175" FontSize="24" Margin="-1,-15,0,0" RenderTransformOrigin="0.457,-0.367" Foreground="White"/>
            <TextBlock HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" FontSize="24" Margin="0,152,0,-128"><Run Text="Render aut"/><Run Text="o"/><Run Text="matically"/></TextBlock>
            <Slider x:Name="FarbeDelta" HorizontalAlignment="Left" Height="40" Margin="-1,138,-14,-97" VerticalAlignment="Top" Width="257" Maximum="255" LargeChange="10" Foreground="Lime" Value="40" ValueChanged="FarbeDelta_ValueChanged_1" />
            <TextBlock HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" Text="Farberhöhung" VerticalAlignment="Top" Width="175" FontSize="24" Margin="0,90,0,-43" Foreground="White"/>
            <TextBlock x:Name="StatusBox" HorizontalAlignment="Left" Height="49" TextWrapping="Wrap" VerticalAlignment="Top" Width="256" FontSize="24" Margin="0,377,-14,-345" Foreground="#FF727272"/>
            <TextBlock x:Name="FBSbox" HorizontalAlignment="Left" Height="49" TextWrapping="Wrap" VerticalAlignment="Top" Width="256" FontSize="24" Margin="0,433,0,-428" Foreground="#FF3C3C3C"/>
        </Grid>
        <Button x:Name="FeigenbaumButton" Content="Feigenbaum" HorizontalAlignment="Left" Height="68" Margin="712,26,0,0" VerticalAlignment="Top" Width="200" Background="AliceBlue" Foreground="#FF020202" FontSize="30" Click="FeigenbaumButton_Click"/>
        <Slider x:Name="SliderStart" Visibility="Collapsed" HorizontalAlignment="Left" Height="40" Margin="10,298,0,0" VerticalAlignment="Top" Width="261" Maximum="100" Value="10000" LargeChange="1" Foreground="Lime" />
        <Slider x:Name="SliderTiefe" Visibility="Collapsed" HorizontalAlignment="Left" Height="40" Margin="10,324,0,0" VerticalAlignment="Top" Width="261" Maximum="10000" Value="10000" />
        <Slider x:Name="SliderX1" Visibility="Collapsed" HorizontalAlignment="Left" Height="40" Margin="10,349,0,0" VerticalAlignment="Top" Width="261" Maximum="500" Value="10000" Minimum="1" LargeChange="1" />
        <Slider x:Name="SliderX2" Visibility="Collapsed" HorizontalAlignment="Left" Height="40" Margin="10,376,0,0" VerticalAlignment="Top" Width="261" Maximum="500" Value="10000" Minimum="1" LargeChange="1" />
        <Slider x:Name="SliderY1" Visibility="Collapsed" HorizontalAlignment="Left" Height="40" Margin="10,403,0,0" VerticalAlignment="Top" Width="261" Maximum="100" Value="10000" />
        <Slider x:Name="SliderY2" Visibility="Collapsed" HorizontalAlignment="Left" Height="40" Margin="10,435,0,0" VerticalAlignment="Top" Width="261" Maximum="100" Value="10000" />
        <Button x:Name="SierpinskiButton_Copy" Content="Sierpinski 5" HorizontalAlignment="Left" Height="68" Margin="923,26,0,0" VerticalAlignment="Top" Width="200" Background="AliceBlue" Foreground="#FF020202" FontSize="30" Click="SierpinskiButton_Copy_Click"/>
        <TextBox x:Name="Box_Tiefe" HorizontalAlignment="Left" Height="20" Margin="163,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="103" Background="#66FFFFFF" BorderBrush="Transparent" TextChanged="Box_Tiefe_TextChanged" Text="30000"/>
        <CheckBox x:Name="RenderAuto" Content="" HorizontalAlignment="Left" Margin="242,273,0,0" VerticalAlignment="Top" Checked="RenderAuto_Checked" Unchecked="RenderAuto_Unchecked" Foreground="Lime"/>
        <Button x:Name="RenderButton" Content="Render" HorizontalAlignment="Left" Height="63" Margin="8,305,0,0" VerticalAlignment="Top" Width="259" Background="Azure" Foreground="#FF020202" FontSize="30" Click="RenderClick"/>
        <TextBox x:Name="Box_Farbe" HorizontalAlignment="Left" Height="20" Margin="176,181,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="90" Background="#66FFFFFF" BorderBrush="Transparent" TextChanged="Box_Farbe_TextChanged" Text="40"/>
        <Button x:Name="RenderButton_Copy" Content="Speichern" HorizontalAlignment="Left" Height="63" Margin="8,379,0,0" VerticalAlignment="Top" Width="259" Background="Azure" Foreground="#FF020202" FontSize="30" Click="SpeichernCick"/>
        <ToggleButton x:Name="ButtonS" Content="S" HorizontalAlignment="Left" Margin="7,138,0,0" VerticalAlignment="Top" Width="55" IsChecked="True" Checked="ButtonS_Checked"/>
        <ToggleButton x:Name="ButtonM" Content="M" HorizontalAlignment="Left" Margin="112,140,0,0" VerticalAlignment="Top" Width="55" Checked="ButtonM_Checked"/>
        <ToggleButton x:Name="ButtonL" Content="L" HorizontalAlignment="Left" Margin="212,140,0,0" VerticalAlignment="Top" Width="55" Checked="ToggleButton_Checked_2"/>
        <TextBox x:Name="SaveX" Visibility="Collapsed" HorizontalAlignment="Left" Height="20" Margin="8,449,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="103" Background="#66FFFFFF" BorderBrush="Transparent" TextChanged="Box_Farbe_TextChanged" Text="1000" TextAlignment="Right"/>
        <TextBox x:Name="SaveY" Visibility="Collapsed" HorizontalAlignment="Left" Height="20" Margin="162,449,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="103" Background="#66FFFFFF" BorderBrush="Transparent" TextChanged="Box_Farbe_TextChanged" Text="1000"/>
        <Button x:Name="ZellButton" Content="Zellulär" HorizontalAlignment="Left" Height="68" Margin="1137,26,0,0" VerticalAlignment="Top" Width="200" Background="AliceBlue" Foreground="#FF020202" FontSize="30" Click="ZellButton_Click"/>
        <TextBlock HorizontalAlignment="Left" Height="29" Margin="10,266,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="227" Foreground="White" Text="Automatisches Rendern" FontSize="20"/>
    </Grid>
</Window>
